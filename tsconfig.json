{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./",
    "rootDir": "lib",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "include": ["lib"],
  "exclude": ["node_modules", "**/*.spec.ts", "*.js"]
}
